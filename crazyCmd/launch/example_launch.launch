<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <!-- Launching the Gazebo world scene -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find crazyflie_gazebo)/worlds/crazyflie.world"/>
        <!-- more default parameters can be changed here -->
        <arg name="paused" value="true"/>
    </include>

    <rosparam param="/cf1/joint_state_controller/type">joint_state_controller/JointStateController</rosparam>
    <rosparam param="/cf1/joint_state_controller/publish_rate">500</rosparam>

    <rosparam param="/cf1/crazyflie_M1_joint_velocity_controller/type">velocity_controllers/JointVelocityController</rosparam>
    <rosparam param="/cf1/crazyflie_M1_joint_velocity_controller/joint">crazyflie_M1_joint</rosparam>
    <rosparam param="/cf1/crazyflie_M1_joint_velocity_controller/pid/p">1.0</rosparam>
    <rosparam param="/cf1/crazyflie_M1_joint_velocity_controller/pid/i">1.0</rosparam>
    <rosparam param="/cf1/crazyflie_M1_joint_velocity_controller/pid/d">0.0</rosparam>
    <rosparam param="/cf1/crazyflie_M1_joint_velocity_controller/pid/i_clamp">100.0</rosparam>

    <rosparam param="/cf1/crazyflie_M2_joint_velocity_controller/type">velocity_controllers/JointVelocityController</rosparam>
    <rosparam param="/cf1/crazyflie_M2_joint_velocity_controller/joint">crazyflie_M2_joint</rosparam>
    <rosparam param="/cf1/crazyflie_M2_joint_velocity_controller/pid/p">1.0</rosparam>
    <rosparam param="/cf1/crazyflie_M2_joint_velocity_controller/pid/i">1.0</rosparam>
    <rosparam param="/cf1/crazyflie_M2_joint_velocity_controller/pid/d">0.0</rosparam>
    <rosparam param="/cf1/crazyflie_M2_joint_velocity_controller/pid/i_clamp">100.0</rosparam>

    <rosparam param="/cf1/crazyflie_M3_joint_velocity_controller/type">velocity_controllers/JointVelocityController</rosparam>
    <rosparam param="/cf1/crazyflie_M3_joint_velocity_controller/joint">crazyflie_M3_joint</rosparam>
    <rosparam param="/cf1/crazyflie_M3_joint_velocity_controller/pid/p">1.0</rosparam>
    <rosparam param="/cf1/crazyflie_M3_joint_velocity_controller/pid/i">1.0</rosparam>
    <rosparam param="/cf1/crazyflie_M3_joint_velocity_controller/pid/d">0.0</rosparam>
    <rosparam param="/cf1/crazyflie_M3_joint_velocity_controller/pid/i_clamp">100.0</rosparam>

    <rosparam param="/cf1/crazyflie_M4_joint_velocity_controller/type">velocity_controllers/JointVelocityController</rosparam>
    <rosparam param="/cf1/crazyflie_M4_joint_velocity_controller/joint">crazyflie_M4_joint</rosparam>
    <rosparam param="/cf1/crazyflie_M4_joint_velocity_controller/pid/p">1.0</rosparam>
    <rosparam param="/cf1/crazyflie_M4_joint_velocity_controller/pid/i">1.0</rosparam>
    <rosparam param="/cf1/crazyflie_M4_joint_velocity_controller/pid/d">0.0</rosparam>
    <rosparam param="/cf1/crazyflie_M4_joint_velocity_controller/pid/i_clamp">100.0</rosparam>

    <!-- Importing urdf informations to create a model of Crazyflie -->
    <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find crazyflie_description)/urdf/crazyflie_reference_cf1.urdf'" />

    <!-- Parameters to set the spawn position of the model -->
    <arg name="x1" default="0"/>
    <arg name="y1" default="0"/>
    <arg name="z1" default="0.2"/>

    <arg name="x2" default="0"/>
    <arg name="y2" default="1.0"/>
    <arg name="z2" default="0.2"/>

    <arg name="x3" default="0"/>
    <arg name="y3" default="2.0"/>
    <arg name="z3" default="0.2"/>

    <arg name="x4" default="0"/>
    <arg name="y4" default="3.0"/>
    <arg name="z4" default="0.2"/>



    <!-- Spawning the model -->
    <node name="cf1_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
          args="-urdf -param robot_description -model cf1 -x $(arg x1) -y $(arg y1) -z $(arg z1)" />
    <!-- <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" args="-urdf -model cf1 -x $(arg x) -y $(arg y) -z $(arg z) -param robot_description -y -6"/> -->

    <!-- loads the controllers -->
    <node name="controller_spawner_cf1" pkg="controller_manager" type="spawner" ns="/cf1" args="crazyflie_M1_joint_velocity_controller crazyflie_M2_joint_velocity_controller crazyflie_M3_joint_velocity_controller crazyflie_M4_joint_velocity_controller joint_state_controller"/>
   <!-- converts joint states to TF transforms -->

    <!-- Starting up nodes that give the pace to the inner controllers -->
    <node name="node_100Hz" pkg="crazyCmd" type="node_100Hz.py" output="screen"/>
    <node name="node_500Hz" pkg="crazyCmd" type="node_500Hz.py" output="screen"/>

    <include file="$(find crazyCmd)/launch/example_launch_cf2.launch"/>

    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
        <remap from="/joint_states" to="/cf1/joint_states" />
    </node>



</launch>